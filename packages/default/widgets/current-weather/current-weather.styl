.widget-title
  margin 0.5em
.content
  font-weight 900
  font-size 3.5em
  color $gray-light
  width 100%
  text-align center
  margin auto
  .row
    width 100%
    margin auto
    font-size 0.8em
    #curr_weather
      padding-bottom: 0.3em
    .col-half
      width 50%
      min-width 50%
      margin auto
      float left
      i
        font-size 0.75em
        vertical-align middle
    .col-half-right
      width 50%
      padding 0 1%
      margin auto
      float right
    .col-halfhalf
      width 50%
      padding 0 .5%
      float left
      line-height 1
    .jumbo
      font-size 1.25em
      line-height 0.5
      vertical-align middle
    .col-half.jumbo
      line-height 1.5
      vertical-align middle
    small
      font-size 0.5em
      text-transform uppercase
  #curr_temperature
    color: #00e676
    i
      font-size 1em
  #curr_max
    color: #FF1000
  #curr_min
    color: #1e88e5
  #curr_last_updated
    text-align right
    font-size 0.4em
    margin 0
  #curr_sunset, #curr_sunrise
    font-size 0.6em
    small
      font-size 0.75em
    i
      font-size 1em

.red-warn
  color: #FF1000;

.right
  text-align right
