.content
  font-size 2em
  color $gray-light
  height 100%
  margin auto
  padding 0
  .map
    float left
    width 74%
    height 92%
    margin-right 1%
  .map.full
    float left
    width 100%
    height 92%
    margin-right 1%
  .info
    margin 0
    margin-left auto
    float left
    height 92%
    width 25%
    .info-card
      height 25%
      text-align center
      .info-title
        float left
        width 100%
        font-size 0.75em
      .info-metric
        float left
        width 100%
        font-size 1.35em
        font-weight 700
